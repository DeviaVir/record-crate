{
  "name": "record-crate",
  "version": "1.1.1",
  "description": "index, organize, and search your music collection, DJ sick sets.",
  "main": "index.js",
  "bin": "./bin/record-crate.js",
  "scripts": {
    "start": "node ./bin/record-crate.js start",
    "prestart": "browserify ./lib/browser/*.js | uglifyjs > assets/javascript/include.js",
    "test": "./node_modules/.bin/lab -v -c",
    "index": "node ./bin/record-crate.js index"
  },
  "service": {
    "args": {
      "--music-folder": {
        "description": "directory to index",
        "default": "/music"
      },
      "--app": {
        "default": "/Applications/Ableton Live 9 Standard.app/",
        "description": "application to use to open mp3"
      },
      "--port": {
        "default": "5000",
        "description": "port to run record-crate server on"
      },
      "--es-url": {
        "default": "localhost:9200",
        "description": "url of ElasticSearch service"
      }
    }
  },
  "author": "Ben Coe <ben@npmjs.com>",
  "license": "ISC",
  "preferglobal": true,
  "dependencies": {
    "async": "^0.9.0",
    "chalk": "^0.5.1",
    "elasticsearch": "^3.0.0",
    "jquery": "^2.1.1",
    "lodash": "^2.4.1",
    "musicmetadata": "^0.6.0",
    "mustache": "^0.8.2",
    "ndm": "^3.7.2",
    "recursive-readdir": "^1.2.0",
    "restify": "^2.8.3",
    "yargs": "^1.3.3",
    "mkdirp": "^0.5.0"
  },
  "devDependencies": {
    "browserify": "^6.3.3",
    "cheerio": "^0.18.0",
    "code": "^1.2.1",
    "lab": "^5.1.0",
    "rimraf": "^2.2.8",
    "uglify-js": "^2.4.15"
  }
}
